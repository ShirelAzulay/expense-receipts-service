{
  "openapi": "3.0.3",
  "info": {
    "title": "Receipts Validation API",
    "version": "2.0.0",
    "description": "API for employees to upload receipts, provide metadata, and validate consistency between provided metadata and extracted data from the receipt file."
  },
  "servers": [
    { "url": "http://localhost:8000" }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    { "BearerAuth": [] }
  ],
  "paths": {
    "/receipts": {
      "post": {
        "summary": "Upload a new receipt",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file", "metadata"],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Receipt file (PDF or image: pdf, png, jpg)"
                  },
                  "metadata": {
                    "type": "object",
                    "required": ["amount", "currency", "event_date", "event_type"],
                    "properties": {
                      "amount": { "type": "number", "example": 250.00 },
                      "currency": {
                        "type": "string",
                        "enum": ["ILS", "USD", "EUR"],
                        "example": "ILS"
                      },
                      "event_date": { "type": "string", "format": "date", "example": "2025-09-20" },
                      "event_type": { "type": "string", "example": "Refreshments" }
                    }
                  }
                }
              },
              "examples": {
                "multipartExample": {
                  "summary": "Example upload",
                  "value": {
                    "file": "(binary file)",
                    "metadata": {
                      "amount": 250.00,
                      "currency": "ILS",
                      "event_date": "2025-09-20",
                      "event_type": "Refreshments"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Receipt uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "receipt_id": { "type": "string", "example": "abc123" },
                    "validation_status": { "type": "string", "example": "pending" },
                    "message": { "type": "string", "example": "Receipt uploaded successfully. Validation pending." }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List receipts by user",
        "parameters": [
          { "name": "user_id", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "List of receipts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "receipt_id": { "type": "string", "example": "abc123" },
                      "validation_status": { "type": "string", "example": "invalid" },
                      "event_date": { "type": "string", "example": "2025-09-20" },
                      "amount": { "type": "number", "example": 250.00 },
                      "event_type": { "type": "string", "example": "Refreshments" },
                      "plausibility_status": { "type": "string", "example": "failed" },
                      "plausibility_reason": { "type": "string", "example": "Expense type mismatch" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/receipts/{receipt_id}/validate": {
      "post": {
        "summary": "Validate receipt against provided metadata",
        "parameters": [
          { "name": "receipt_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Validation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "receipt_id": { "type": "string", "example": "abc123" },
                    "validation": {
                      "type": "object",
                      "properties": {
                        "amount": {
                          "type": "object",
                          "properties": {
                            "metadata": { "type": "number", "example": 250.00 },
                            "extracted": { "type": "number", "example": 250.00 },
                            "match": { "type": "boolean", "example": true }
                          }
                        },
                        "event_date": {
                          "type": "object",
                          "properties": {
                            "metadata": { "type": "string", "example": "2025-09-20" },
                            "extracted": { "type": "string", "example": "2025-09-20" },
                            "match": { "type": "boolean", "example": true }
                          }
                        },
                        "event_type": {
                          "type": "object",
                          "properties": {
                            "metadata": { "type": "string", "example": "Refreshments" },
                            "extracted_category": { "type": "string", "example": "Electronics" },
                            "match": { "type": "boolean", "example": false }
                          }
                        }
                      }
                    },
                    "plausibility_status": { "type": "string", "example": "failed" },
                    "plausibility_reason": { "type": "string", "example": "Expense type mismatch: iPhone detected but eventType=Refreshments" },
                    "issues": {
                      "type": "array",
                      "items": { "type": "string" },
                      "example": ["event_type mismatch", "suspicious amount"]
                    },
                    "validation_status": { "type": "string", "example": "invalid" },
                    "message": { "type": "string", "example": "Validation failed due to mismatches." }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/receipts/{receipt_id}": {
      "get": {
        "summary": "Get receipt info",
        "parameters": [
          { "name": "receipt_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Receipt details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "receipt_id": { "type": "string", "example": "abc123" },
                    "uploaded_by": { "type": "string", "example": "user_45" },
                    "file_url": { "type": "string", "example": "https://storage.company.com/receipts/abc123.pdf" },
                    "metadata": {
                      "type": "object",
                      "properties": {
                        "amount": { "type": "number", "example": 250.00 },
                        "currency": { "type": "string", "example": "ILS" },
                        "event_date": { "type": "string", "example": "2025-09-20" },
                        "event_type": { "type": "string", "example": "Refreshments" }
                      }
                    },
                    "validation": {
                      "type": "object",
                      "properties": {
                        "validation_status": { "type": "string", "example": "invalid" },
                        "issues": {
                          "type": "array",
                          "items": { "type": "string" },
                          "example": ["event_type does not match purchase category"]
                        },
                        "plausibility_status": { "type": "string", "example": "failed" },
                        "plausibility_reason": { "type": "string", "example": "Expense type mismatch: iPhone detected but eventType=Refreshments" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
